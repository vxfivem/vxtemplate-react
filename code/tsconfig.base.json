{
  "compilerOptions": {
    "lib": [
      "ES6",
      "ES2021"
    ],
    "downlevelIteration": true,
    "module": "commonjs",
    "target": "ES6",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}